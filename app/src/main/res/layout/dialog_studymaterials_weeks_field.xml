<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/Study_Materials_Lecture_LL"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <ListView
            android:id="@+id/Study_Materials_Lecture_ListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Study_Materials_Tutorial_LL"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <ListView
            android:id="@+id/Study_Materials_Tutorial_ListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Study_Materials_ExtraFiles_LL"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <ListView
            android:id="@+id/Study_Materials_ExtraFiles_ListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
